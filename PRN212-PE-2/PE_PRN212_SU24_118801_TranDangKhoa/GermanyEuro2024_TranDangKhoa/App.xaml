<Application x:Class="GermanyEuro2024_TranDangKhoa.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GermanyEuro2024_TranDangKhoa"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <Style x:Key="LoginLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="Arial Narrow" />
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="LoginTextBox" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
        <Style x:Key="MainLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="MainTextBox" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Foreground" Value="Blue"/>
        </Style>
    </Application.Resources>
</Application>
